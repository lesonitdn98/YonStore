<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:color="@android:color/transparent">

    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="@dimen/_100sdp" />
            <stroke android:width="@dimen/_1sdp" android:color="@color/blue" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/blueTransparent" />
            <corners android:radius="@dimen/_100sdp" />
            <stroke android:width="@dimen/_1sdp" android:color="@color/light" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <corners android:radius="@dimen/_100sdp" />
            <stroke android:width="@dimen/_1sdp" android:color="@color/light" />
        </shape>
    </item>

</selector>